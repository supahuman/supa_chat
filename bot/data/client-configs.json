{
  "supa-chat": {
    "name": "Supa Chat",
    "description": "Default client for Supa Chatbot",
    "vectorDB": {
      "type": "mongodb",
      "connectionString": "mongodb://localhost:27017",
      "database": "supa_chatbot",
      "collection": "knowledgebases",
      "vectorIndex": "vector_index",
      "numCandidates": 20,
      "similarity": 0.7
    },
    "chunking": {
      "strategy": "langchain",
      "chunkSize": 1000,
      "chunkOverlap": 200
    },
    "webCrawler": {
      "enabled": true,
      "urls": [
        "https://docs.supachatbot.com",
        "https://help.supachatbot.com"
      ],
      "refreshInterval": 24
    }
  },
  "techcorp": {
    "name": "TechCorp Customer Support",
    "description": "TechCorp's internal customer support chatbot",
    "vectorDB": {
      "type": "mongodb",
      "connectionString": "mongodb+srv://techcorp:password@techcorp-cluster.mongodb.net/techcorp_support",
      "database": "techcorp_support",
      "collection": "knowledge_base",
      "vectorIndex": "techcorp_vector_index",
      "numCandidates": 25,
      "similarity": 0.8
    },
    "chunking": {
      "strategy": "langchain",
      "chunkSize": 1200,
      "chunkOverlap": 250
    },
    "webCrawler": {
      "enabled": true,
      "urls": [
        "https://help.techcorp.com",
        "https://docs.techcorp.com"
      ],
      "refreshInterval": 24
    }
  }
}
