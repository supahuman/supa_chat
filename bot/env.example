# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/supa_chatbot

# Bot Configuration
BOT_ENABLED=true
ALLOW_PUBLIC_BOT=true

# AI Services
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Embedding Provider Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_DIMENSIONS=1536

# OpenAI Embeddings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Hugging Face Embeddings (alternative)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Sentence Transformers (local, free)
SENTENCE_TRANSFORMERS_MODEL=all-MiniLM-L6-v2

# Cohere Embeddings (alternative)
COHERE_API_KEY=your_cohere_api_key_here
COHERE_EMBEDDING_MODEL=embed-english-v3.0

# Vector Search Provider Configuration
VECTOR_SEARCH_PROVIDER=atlas

# MongoDB Atlas Vector Search
ATLAS_VECTOR_INDEX=vector_index
VECTOR_CANDIDATES=200
VECTOR_SIMILARITY=cosine

# FAISS Configuration (local, free)
FAISS_INDEX_PATH=./data/faiss_index

# Pinecone Configuration (managed)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=supa-chatbot

# Chroma Configuration (self-hosted)
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=supa-chatbot

# Chunking Strategy Configuration
# Options: 'custom' | 'langchain'
CHUNKING_STRATEGY=custom

# LangChain Configuration (only used when CHUNKING_STRATEGY=langchain)
LANGCHAIN_CHUNK_SIZE=1000
LANGCHAIN_CHUNK_OVERLAP=200
LANGCHAIN_SUPPORTED_TYPES=txt,md,pdf,docx,csv,json,html

# Web Crawler Configuration
CRAWLER_ENABLED=true
CRAWLER_BASE_URL=https://help.africanvibes.com
CRAWLER_MAX_PAGES=50
CRAWLER_DELAY=1000

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000
